{
  "name": "@byndyusoft/eslint-config",
  "version": "0.0.0-development",
  "description": "ESLint config for Byndyusoft projects",
  "keywords": [
    "byndyusoft",
    "eslint",
    "eslint-config"
  ],
  "homepage": "https://github.com/Byndyusoft/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/Byndyusoft/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Byndyusoft/eslint-config.git"
  },
  "license": "Apache-2.0",
  "author": "Byndyusoft",
  "main": "./index.js",
  "files": [
    "configs",
    "*.js"
  ],
  "scripts": {
    "postinstall": "husky install",
    "lint": "yarn run lint:eslint && yarn run lint:markdown && yarn run lint:prettier",
    "lint:eslint": "eslint --ignore-path ./.gitignore --max-warnings 0 --ext .ts,.js .",
    "lint:eslint:fix": "eslint --ignore-path ./.gitignore --fix --ext .ts,.js .",
    "lint:fix": "yarn run lint:eslint:fix && yarn run lint:markdown:fix && yarn run lint:prettier:fix",
    "lint:markdown": "markdownlint --ignore-path ./.gitignore \"./**/*.md\"",
    "lint:markdown:fix": "markdownlint --ignore-path ./.gitignore --fix \"./**/*.md\"",
    "lint:prettier": "prettier --ignore-path ./.gitignore --check \"./**/*.{ts,js,json,yaml,yml,md}\"",
    "lint:prettier:fix": "prettier --ignore-path ./.gitignore --write \"./**/*.{ts,js,json,yaml,yml,md}\"",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-dirs": "^0.0.4",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-testing-library": "^6.0.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "pkg-dir": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "eslint": "8.48.0",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "markdownlint-cli": "0.36.0",
    "pinst": "3.0.0",
    "prettier": "3.0.3",
    "prettier-plugin-packagejson": "2.4.5",
    "semantic-release": "21.1.1"
  },
  "peerDependencies": {
    "eslint": "^8.44.0"
  },
  "packageManager": "yarn@4.0.0-rc.50",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
